<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/my.style.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Coffee Bar</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#e5e5cf">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Coffee Bar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Product", "Index", "Products")</li>
                    <li>@Html.ActionLink("Order", "Index", "Orders")</li>
                    <li>@Html.ActionLink("Documentation", "Documentation", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class=" body-content">
        @RenderBody()
        <hr />
        <div class="row footer-sites">
            <div class="col-md-4 ">
                <h4>Technology</h4>
                <ul>
                    <li><a href="//stackoverflow.com">Stack Overflow</a></li>
                    <li><a href="http://v3.bootcss.com/components/#nav">Bootstrap</a></li>
                    <li><a href="http://www.github.com">Github</a></li>
                    <li><a href="http://www.google.com">Google</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h4>University</h4>
                <ul>
                    <li><a href="http://www.monash.edu/">Monash University</a></li>
                    <li><a href="http://www.southeast.edu">Southeast University</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h4>Developer</h4>
                <ul>
                    <li><a href="#">Zhu Shuai</a></li>
                    <li><a href="http://www.github.com/szhu57">Github Address</a></li>
                </ul>
            </div>
        </div>
        <br />
        <footer>
            <div class="container">
                <div class="row">
                    <p class="text-center">
                        Copyright © 2015 Zhu Shuai Monash University. All Rights Reserved.
                        <b><a href="http://users.monash.edu.au/~sgrose/msh/disclaimer.htm" target="_Blank">Monash course disclaimer</a></b>
                    </p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
